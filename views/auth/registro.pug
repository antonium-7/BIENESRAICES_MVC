extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow.rounded-lg
                form.space-y-5(method="POST" action="/auth/registro" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Tu Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ej: Antonio" type="text" name="nombre" value= usuario ? usuario.nombre : '' ) 
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ej: anonimo@gmail.com" type="text" name="email" value= usuario ? usuario.email : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ej: 12345" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repetir_password") Repetir Contraseña
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite tu contraseña" type="password" name="repetir_password")
                    
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia sesión.
                        a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi Password

                    input(class="w-full py-3 rounded-md bg-indigo-600 font-bold text-gray-100 hover:bg-indigo-700 hover:text-white hover:cursor-pointer" type="submit" value="Crear Cuenta")
